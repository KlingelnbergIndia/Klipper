<UserControl x:Class="Klipper.Desktop.WPF.Controls.CustomControls.LeaveList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <ListView x:Name="ListView1"
                Margin="10" 
                ItemsSource="{Binding}" 
                Background="#222D34"
                VerticalAlignment="Stretch" 
                ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ListView.View>
            <GridView>
                <GridViewColumn Width="Auto" Header="Name" DisplayMemberBinding="{Binding Name}"/>
                <GridViewColumn Width="Auto" Header="Age" DisplayMemberBinding="{Binding Age}"/>
                <GridViewColumn Width="Auto" Header="Mail Id" DisplayMemberBinding="{Binding Mail}"/>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
